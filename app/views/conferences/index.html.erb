<p id="notice"><%= notice %></p>

<h1>Conferences</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Intro</th>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th>Event</th>
      <th>Speaker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conferences.each do |conference| %>
      <tr>
        <td><%= conference.title %></td>
        <td><%= conference.intro %></td>
        <td><%= conference.date %></td>
        <td><%= conference.time %></td>
        <td><%= conference.place %></td>
        <td><%= conference.event_id %></td>
        <td><%= conference.speaker_id %></td>
        <td><%= link_to 'Show', conference %></td>
        <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
        <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

