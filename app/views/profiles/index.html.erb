<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Birthdate</th>
      <th>Country</th>
      <th>Geren</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.lastName %></td>
        <td><%= profile.firstName %></td>
        <td><%= profile.birthDate %></td>

        <td><%= profile.country %></td>
        <td><%= profile.geren %></td>

        <td><%= link_to 'Show', profile, :class => 'btn btn-secondary ' %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile),  :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, :class => 'btn btn-success' %>
