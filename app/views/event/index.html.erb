<div class="container-div">
<h1>Eventos</h1>
<table class="table ">
	  <thead class="thead-light">
	<tr><TH>Evento</TH><TH>Fecha inicio</TH><TH>Fecha fin</TH><TH>Estado</TH><TH>Encargado</TH><TH colspan="2"><%= link_to 'Nuevo', event_new_path %></TH></tr>
</thead>
	<tbody>
	<% @events.each do |f| %>

	<tr><TD><%= f.name %></TD>
		<TD><%= f.dateStart.strftime("%Y/%m/%d") %></TD>
		<TD><%= f.dateEnd.strftime("%Y/%m/%d") %></TD>

		<TD><%= f.status %></TD>
		<TD><%= f.user_id %></TD>
		<TD><%= link_to 'Editar', event_edit_path(f['id']) %></TD><TD>

<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } %>
		</TD>
	</tr>
    <% end %>
    </tbody>
</table>
</div>
